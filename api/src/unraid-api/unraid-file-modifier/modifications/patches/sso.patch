+function verifyUsernamePasswordAndSSO(string $username, string $password): bool {
+    if ($username != "root") return false;
+
+    $output = exec("/usr/bin/getent shadow $username");
+    if ($output === false) return false;
+    $credentials = explode(":", $output);
+    $valid = password_verify($password, $credentials[1]);
+    if ($valid) {
+        return true;
+    }
+    // We may have an SSO token, attempt validation
+    if (strlen($password) > 500) {
+        if (!preg_match('/^[A-Za-z0-9-_]+.[A-Za-z0-9-_]+.[A-Za-z0-9-_]+$/', $password)) {
+            my_logger("SSO Login Attempt Failed: Invalid token format");
+            return false;
+        }
+        $payload = json_encode(["token" => $password]);
+        $response = false;
+        $code = 0;
+
+        if (function_exists("curl_init")) {
+            $ch = curl_init("http://127.0.0.1/auth/sso/validate");
+            curl_setopt($ch, CURLOPT_POST, true);
+            curl_setopt($ch, CURLOPT_HTTPHEADER, ["Content-Type: application/json"]);
+            curl_setopt($ch, CURLOPT_POSTFIELDS, $payload);
+            curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
+            curl_setopt($ch, CURLOPT_TIMEOUT, 5);
+            $response = curl_exec($ch);
+            $code = curl_getinfo($ch, CURLINFO_RESPONSE_CODE);
+            curl_close($ch);
+        } else {
+            $context = stream_context_create([
+                "http" => [
+                    "method" => "POST",
+                    "header" => "Content-Type: application/json
+",
+                    "content" => $payload,
+                    "timeout" => 5,
+                ],
+            ]);
+            $response = @file_get_contents("http://127.0.0.1/auth/sso/validate", false, $context);
+            if (isset($http_response_header[0])) {
+                $code = (int) preg_replace('/^HTTP\/[0-9.]+\s+(\d+).*/', '', $http_response_header[0]);
+            }
+        }
+        my_logger("SSO Login Attempt Code: $code");
+        my_logger("SSO Login Attempt Response: " . print_r($response, true));
+
+        if ($code !== 200) {
+            return false;
+        }
+
+        if (empty($response)) {
+            return false;
+        }
+
+        try {
+            $decoded = json_decode($response, true);
+            if (isset($decoded['valid']) && $decoded['valid'] === true) {
+                return true;
+            }
+        } catch (Exception $e) {
+            my_logger("SSO Login Attempt Exception: " . $e->getMessage());
+            return false;
+        }
+    }
+    return false;
