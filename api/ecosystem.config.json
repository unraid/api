{
    "$schema": "https://json.schemastore.org/pm2-ecosystem",
    "apps": [
        {
            "name": "unraid-api",
            "script": "./dist/main.js",
            "cwd": "/usr/local/unraid-api",
            "exec_mode": "fork",
            "wait_ready": true,
            "listen_timeout": 15000,
            "max_restarts": 10,
            "min_uptime": 10000,
            "ignore_watch": [
                "node_modules",
                "src",
                ".env.*",
                "myservers.cfg"
            ],
            "log": "/var/log/unraid-api/unraid-api.log"
        }
    ]
}